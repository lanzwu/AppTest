        <RadioButton
            android:id="@+id/drawHLines"
            android:text="横线30条"
            android:checked="true"
            android:textSize="@dimen/textSize"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/drawVLines"
            android:text="竖线30条"
            android:textSize="@dimen/textSize"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/drawCenterToBorderLines"
            android:text="中心到四边"
            android:textSize="@dimen/textSize"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/drawCenterToCornerLines"
            android:text="中心到四角"
            android:textSize="@dimen/textSize"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/drawCross"
            android:text="十字"
            android:textSize="@dimen/textSize"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/daubScreen"
            android:text="涂抹工具"
            android:textSize="@dimen/textSize"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </RadioGroup>

    <Button
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/smallButtonHeight"
        android:background="@drawable/selector"
        android:text="退出"
        android:textSize="@dimen/textSize"
